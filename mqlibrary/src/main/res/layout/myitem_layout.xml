<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg"
    android:gravity="center_vertical"
    android:minHeight="@dimen/interval_48"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/interval_8"
    android:paddingLeft="@dimen/interval_16"
    android:paddingRight="@dimen/interval_16"
    android:paddingTop="@dimen/interval_8">

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/touch_bg"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/interval_8"
        android:layout_weight="1"
        android:textColor="@color/myitem_left_text"
        android:textSize="@dimen/textX" />

    <com.mqby.mqlibrary.widget.MyEditText
        android:id="@+id/tv_right"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:background="@android:color/transparent"
        android:gravity="center_vertical|right"
        android:minHeight="@dimen/interval_32"
        android:textSize="@dimen/textX" />

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:paddingLeft="@dimen/interval_4"
        android:scaleType="centerInside"
        android:visibility="gone" />

</LinearLayout>