<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_sel"
            android:layout_width="@dimen/interval_16"
            android:layout_height="@dimen/interval_16"
            android:src="@drawable/ic_cb"
            android:layout_marginLeft="@dimen/interval_16"/>
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="16dp"
            android:text="选择"
            android:textColor="@color/popmenu_item_text"
            android:textSize="@dimen/textX"
            android:layout_marginRight="@dimen/interval_32"/>
    </LinearLayout>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/interval_8"
        android:layout_marginRight="@dimen/interval_8"
        android:background="@color/line" />

</LinearLayout>