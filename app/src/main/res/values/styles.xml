<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 权限Activity的主题 -->
    <style name="PermissionsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--半透明主题-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/translucent</item>
    </style>

    <!--分割线-->
    <style name="lines">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line</item>
    </style>

    <!--分割线-->
    <style name="lines_16_16">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@color/line2</item>
        <item name="android:layout_marginLeft">@dimen/interval_16</item>
        <item name="android:layout_marginRight">@dimen/interval_16</item>
    </style>
</resources>